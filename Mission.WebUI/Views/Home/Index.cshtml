        <div id="newsForm">
                @if (ViewBag.SaveMessage != null || TempData["error"] != null)
                {
                    <p style="color:#2CF12C; font-size:18px;">@ViewBag.SaveMessage</p>
                    
                    if (TempData["error"] != null)
                    {
                        <p style="color:red; float:left; font-size:18px;">@TempData["error"]</p>
                        @Html.Partial("_Unsubscribe", @Model.Subscriber)
                    }
                }
                else
                {
                    <div id="subscribe">@Html.Partial("_Subscribe", @Model.Subscriber)</div>
                    <div id="unsubscribe">@Html.Partial("_Unsubscribe", @Model.Subscriber)</div>
                }
        </div>
    </div>

    

</div>
    <div class="newsDiv">
    <div id="posts-list" class="post-list-partial">
    @{var n = 1;}
    @foreach (var news in Model.Post)
    {
        var link = "";
        if (news.Type == 0)
        {
            link = "Index";
        }
        else { link = "blog"; };
       
            string title = news.Title.Replace(" ", "_");
                
        <article class="format-standard" id="@title">
            <div class="entry-date">
                <div class="number">@news.Date.Day</div>
                <div class="year">@news.Date.ToString("MMM"),@news.Date.Year</div>
            </div>
            <h2 class="post-heading post-h2">
                   <a href="Post/@link#@title">@news.Title</a>
                </h2>
            <div class="excerpt" id="news-@n">@MvcHtmlString.Create(@news.Body)</div>
          
        </article>
        n = n + 1;
    }
</div>
