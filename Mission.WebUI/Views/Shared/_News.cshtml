
<div id="posts-list">
	        	
	        		<h2 class="page-heading"><span>NYHETER</span></h2>
@foreach (var news in Model)
{ 
    
    <article class="format-standard">
						<div class="entry-date"><div class="number">@news.Date.Day</div><div class="year">@news.Date.ToString("MMM"),@news.Date.Year</div></div>
						<h2  class="post-heading"><a href="single.html">@news.Title</a></h2>
						<div class="excerpt">@MvcHtmlString.Create(@news.Body)</div>
						@*<a href="single.html" class="read-more">continue &#8594;</a>*@
						<div class="meta">
							<div class="categories">@news.Date.ToString("HH:mm:ss")</div>
							 @if (Mission.WebUI.Infrastructure.AuthorizeHelper.IsAdmin(this.Context))
                            {
							    <div class="comments"><a href="#">@Html.ActionLink("Ändra", "Edit", "Post", new { id = news.ID }, null)</a></div>
							    <div class="user"><a href="#">@Html.ActionLink("Ta bort", "Delete", "Post", new { id = news.ID }, null)</a></div>
                            }
						</div>
		</article>
}
</div>