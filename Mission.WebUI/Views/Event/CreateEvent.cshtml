@using Mission.Domain.Entities
@model Event
           
    <link href="@Url.Content("~/Content/Kendo/styles/kendo.common.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Kendo/styles/kendo.default.min.css")" rel="stylesheet">

    <script src="@Url.Content("~/Content/Kendo/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/Kendo/js/kendo.web.min.js")"></script>
 

@{
    ViewBag.Title = "CreateEvent";
}

<h2>CreateEvent</h2>

@using (Html.BeginForm()) { 
    
    <div class ="CreateEvent">
        <p>
            Titel <br />
            @Html.EditorFor(e => e.HeadLine)
       </p>
       <p>
            Beskrivning <br />
            @Html.EditorFor(e => e.Info)
       </p>
       <p>
            Stad <br />
            @Html.EditorFor(e => e.City)
       </p>
       <p>
             <div id="to-do">
                    @Html.TextBoxFor(e => e.Date, new { id = "datetimepicker", value = "10/10/2011 12:00 AM", style = "width:200px;", @class = "k-widget k-datetimepicker k-header" })
            </div>
        <script>
            $(document).ready(function () {
                // create DateTimePicker from input HTML element
                $("#datetimepicker").kendoDateTimePicker();
            });
        </script>
        <style scoped>
            #to-do {
                height: 52px;
                width: 221px;
                margin: 30px auto;
                padding: 91px 0 0 188px;
                background: url('../../content/web/datepicker/todo.png') transparent no-repeat 0 0;
            }
        </style>

       </p>

        <div>
            <input type="submit" value ="Skapa Event"/>
        </div>

    
    
    </div>
}