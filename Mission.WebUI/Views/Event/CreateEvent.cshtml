@model Mission.WebUI.ViewModels.vm_EventUser
           
@{
    ViewBag.Title = "Skapa event";
}

<script type="text/javascript" src="@Url.Content("~/Content/tinymce/jscripts/tiny_mce/tiny_mce.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/js/LoadTinymce.js")"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
<script src="http://code.jquery.com/jquery-1.8.3.js"></script>
<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>

<link type="text/css" href="css/jquery.ui.theme.css" rel="stylesheet" />
<link type="text/css" href="css/jquery.ui.datepicker.css" rel="stylesheet" />
<link type="text/css" href="css/demos.css" rel="stylesheet" />
<script type="text/javascript" src="js/jquery-1.7.1.js"></script>
<script type="text/javascript" src="js/jquery.ui.core.js"></script>
<script type="text/javascript" src="js/jquery.ui.widget.js"></script>
<script type="text/javascript" src="js/jquery.ui.datepicker.js"></script>



<script type="text/javascript" src="@Url.Content("~/Content/js/DateTimePicker.js")"></script> 

<div id="posts-list">
    <h2 class="page-heading">
        <span>Skapa nytt event</span></h2>
    @using (Html.BeginForm())
    { 
    
        <div class="CreateEvent">
            <p>
                Titel
                <br />
                @Html.EditorFor(e => e.Event.HeadLine)<span style="color: Red;">@Html.ValidationMessageFor(s => s.Event.HeadLine)</span>
            </p>
            <p>
                Beskrivning
                <br />

                 @Html.TextAreaFor(e => e.Event.Description, new { id = "elm1", name = "elm1", rows = "10", cols = "30", style = "width:100%", height = "100%" })
            </p>
            <p>
                @Html.RadioButtonFor(e => e.Event.OpenEvent, 0, new { id = "radio1" })Privat event
                @Html.RadioButtonFor(e => e.Event.OpenEvent, 1, new { id = "radio2" })Publikt event
            </p>
            
                Stad
                <br />
                @Html.EditorFor(e => e.Event.City)<span style="color: Red;">@Html.ValidationMessageFor(s => s.Event.City)</span><br />
                <div id="to-d">
                    Datum<br />
                    @Html.TextBoxFor(e => e.Event.Date, new { id = "datetimepicker", value = "", style = "width:200px;", @class = "" })
                    <br />
                    <span style="color: Red;">@Html.ValidationMessageFor(s => s.Event.Date)</span>
                </div>
            
            <p>
                Företag (Detta blir användarnamn om du fyller i ett lösenord)
                <br />
                @Html.EditorFor(e => e.Username)<span style="color: Red;">@Html.ValidationMessageFor(s => s.Username)</span>
            </p>
            <p id="Password">
                Lösenord (Detta blir lösenordet som företaget loggar in med) <b />
                @Html.EditorFor(e => e.Password)<br />
                Epost<br />
                @Html.EditorFor(e => e.Email)
            </p>
            <p>
            
            </p>
            <div>
                <input type="submit" value="Skapa Event" />
            </div>
        </div>
    }
</div>
<script src="@Url.Content("~/Content/js/togglePassword.js")"></script>
<script type="text/javascript">


    $(function () {
        $("#datetimepicker").datetimepicker();
    }); 


</script>