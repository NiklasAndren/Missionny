@using Mission.Domain.Entities
@model List<Event>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@foreach(var events in Model) { 
    <div class="EventDiv">
        <div class = "EventTitle">
            <p>@events.HeadLine</p>
        </div>
        <div class ="EventDescription">
             @Html.Raw(System.Web.HttpUtility.HtmlDecode(@events.Description))
        </div>
        <div class = "EventInfo">
            @events.Date
            @events.City
        </div>      
    </div>
}